<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".StupidAfternoonActivity"
    android:id="@+id/appBackground">

    <TextView android:text="@string/silliness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sillyWords"
        android:textSize="45dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sillyness"
        android:id="@+id/sillyButton"
        android:layout_above="@+id/swimmingText"
        android:layout_alignRight="@+id/sillyWords"
        android:layout_alignEnd="@+id/sillyWords" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:text="I really enjoy going airsofting and sometimes paintball.          I go all the time and I have done it for almost 3 years. I have become really good at both indoorsand outdoors but its not even funny how, good me and my team are. when we go airsofting, we go allout. as you can see below."
        android:id="@+id/swimmingText"
        android:layout_below="@+id/sillyWords"
        android:layout_centerHorizontal="true"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Slide"
        android:id="@+id/nextSlide"
        android:layout_below="@+id/swimmingText"
        android:layout_centerHorizontal="true" />

</RelativeLayout>


